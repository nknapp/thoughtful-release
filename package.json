{
  "name": "thoughtful-release",
  "version": "0.2.2",
  "description": "Create high quality releases with less work",
  "repository": {
    "type": "git",
    "url": "https://github.com/nknapp/thoughtful-release.git"
  },
  "homepage": "https://github.com/nknapp/thoughtful-release",
  "author": {
    "name": "Nils Knappmeier",
    "email": "npm@knappi.org",
    "url": "https://github.com/nknapp"
  },
  "bugs": {
    "url": "https://github.com/nknapp/thoughtful-release/issues"
  },
  "main": "index.js",
  "bin": {
    "thoughtful": "bin/thoughtful.js"
  },
  "preferGlobal": true,
  "license": "MIT",
  "scripts": {
    "pretest": "standard --version || npm -g install standard",
    "test": "mocha && standard",
    "preformat": "standard --version || npm -g install standard",
    "format": "standard --format",
    "thought": "thought run -a",
    "prethoughtcheck": "thought --version || npm -g install thought",
    "thoughtcheck": "thought check-engines",
    "version": "npm run thought",
    "preversion": "npm run thoughtcheck"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "debug": "^2.2.0",
    "lodash.contains": "^2.4.3",
    "lodash.defaults": "^3.1.2",
    "lodash.defaultsdeep": "^3.10.0",
    "lodash.isstring": "^3.0.1",
    "lodash.toarray": "^3.0.2",
    "moment": "^2.11.1",
    "q": "^1.4.1",
    "q-io": "^1.13.2",
    "semver": "^5.1.0"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "chai-as-promised": "^5.2.0",
    "ghooks": "^1.0.1",
    "mocha": "^2.2.5",
    "lodash.escaperegexp": "^3.0.1"
  },
  "files": [
    "bin",
    "lib",
    "LICENSE.md"
  ],
  "standard": {
    "ignore": [
      "spec/fixtures/**"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "thoughtful precommit && standard --format && thought run -a"
    }
  },
  "keywords": []
}
