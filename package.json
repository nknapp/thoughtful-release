{
  "name": "thoughtful-release",
  "version": "0.3.1",
  "description": "Create high quality releases with less work",
  "repository": {
    "type": "git",
    "url": "https://github.com/nknapp/thoughtful-release.git"
  },
  "homepage": "https://github.com/nknapp/thoughtful-release",
  "author": {
    "name": "Nils Knappmeier",
    "email": "npm@knappi.org",
    "url": "https://github.com/nknapp"
  },
  "bugs": {
    "url": "https://github.com/nknapp/thoughtful-release/issues"
  },
  "main": "index.js",
  "bin": {
    "thoughtful": "bin/thoughtful.js"
  },
  "preferGlobal": true,
  "license": "MIT",
  "scripts": {
    "pretest": "standard --version || npm -g install standard",
    "test": "mocha && standard",
    "preformat": "standard --version || npm -g install standard",
    "format": "standard --fix",
    "thought": "thought run -a",
    "prethoughtcheck": "thought --version || npm -g install thought",
    "thoughtcheck": "thought check-engines",
    "version": "bin/thoughtful.js changelog -o -a && npm run thought",
    "preversion": "npm run thoughtcheck"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "debug": "^2.2.0",
    "head": "^1.0.0",
    "lodash.contains": "^2.4.3",
    "lodash.defaults": "^4.2.0",
    "lodash.defaultsdeep": "^4.6.0",
    "lodash.isarray": "^4.0.0",
    "lodash.isplainobject": "^4.0.6",
    "lodash.isstring": "^4.0.1",
    "lodash.toarray": "^4.4.0",
    "m-io": "^0.4.0",
    "moment": "^2.11.1",
    "q": "^1.4.1",
    "semver": "^5.1.0"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "chai-as-promised": "^6.0.0",
    "ghooks": "^2.0.0",
    "lodash.escaperegexp": "^4.1.2",
    "mocha": "^3.2.0",
    "trace": "^2.3.0"
  },
  "files": [
    "bin",
    "lib",
    "LICENSE.md"
  ],
  "standard": {
    "ignore": [
      "spec/fixtures/**"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "standard --fix"
    }
  },
  "keywords": []
}
